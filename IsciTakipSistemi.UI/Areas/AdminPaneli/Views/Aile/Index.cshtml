@model IEnumerable<ITS.CORE.Dto.CreateAileDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/AdminPaneli/Views/Shared/Admin.cshtml";
}

<div class="table-wrapper">
	<div class="table-title">
		<div class="row">
			<div class="col-sm-12 ">

				<h4 style="padding:1rem;color:white; font-size: 1.5rem; float: left;">Aile Bilgileri</h4>

			</div>

		</div>
	</div>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>

					<th scope="col">Aile No</th>
					<th scope="col">Aile Adı</th>
					<th scope="col">Aile Grup</th>
					<th scope="col">Düzenle</th>
					


				</tr>
			</thead>
			<tbody>
				@{
					int a = 1;
				}
				@foreach (var i in Model)
				{


					<tr>

						<td>@a</td>
						<td>@i.AileAdi</td>
						<td>@i.GrupId</td>
						<td><a asp-controller="Aile" asp-action="AileUpdate" asp-route-aileid="@i.AileId"><i class='bx bxs-pencil' style='color:rgba(15,223,88,0.92); font-size:1.7rem'></i></a></td>




					</tr>
				}
			</tbody>
		</table>
	</div>
</div>




