@model IEnumerable<ITS.CORE.Dto.CreateGrupDto>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "Index";
	Layout = "~/Areas/AdminPaneli/Views/Shared/Admin.cshtml";
}

<div class="table-wrapper">
	<div class="table-title">
		<div class="row">
			<div class="col-sm-12 ">

				<h4 style="padding:1rem;color:white; font-size: 1.5rem; float: left;">Grup Bilgileri</h4>

			</div>

		</div>
	</div>
	<div class="table-responsive">
		<table class="table table-striped">
			<thead>
				<tr>

					<th scope="col">Grup No</th>
					<th scope="col">Grup Adı</th>
					<th scope="col">Düzenle</th>
					


				</tr>
			</thead>
			<tbody>
				@{int a = 1; }
				@foreach (var i in Model)
				{


					<tr>

						<td>@a</td>
						<td>@i.GrupAdi</td>
						<td><a asp-controller="Grup" asp-action="GrupUpdate" asp-route-grupid="@i.GrupId"><i class='bx bxs-pencil' style='color:rgba(15,223,88,0.92); font-size:1.7rem'></i></a></td>
						@*<td><a  asp-controller="Grup" asp-action="GrupSil" asp-route-grupid="@i.GrupId"><i class='bx bx-x' style='color:#ef0404; font-size:1.9rem'></i></a></td>*@



					</tr>
					a++;
				}
			</tbody>
		</table>
	</div>
</div>


